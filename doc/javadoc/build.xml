<project name="CDK" default="overview" basedir=".">

    <property name="javadoc.dir" value="javadoc" />
    <property name="pathtojava3d" value="" />

    <path id="project.class.path">
        <pathelement location="/usr/local/j2sdk1.4.0/lib/rt.jar" />

        <pathelement location="." />
        <fileset dir="../../jar">
            <include name="*.jar" />
        </fileset>
        <fileset dir="${pathtojava3d}">
            <include name="*.jar" />
        </fileset>
        <fileset dir="../../jar/libio">
            <include name="*.jar" />
        </fileset>
    </path>

    <target name="overview">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="JavaDocStats" path="."/>

            <package name="org.openscience.cdk.*"/>
        </javadoc>
    </target>

    <target name="keyword.index">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="MakeKeywordIndexDoclet" path="."/>

            <packageset dir="../../src/">
              <include name="org/openscience/cdk/**"/>
              <exclude name="org/openscience/cdk/test/**"/>
            </packageset>
        </javadoc>
    </target>

    <target name="xmi">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="XMIDoclet" path="."/>

            <packageset dir="../../src/">
              <include name="org/openscience/cdk/**"/>
              <exclude name="org/openscience/cdk/test/**"/>
            </packageset>
        </javadoc>
    </target>

</project>



