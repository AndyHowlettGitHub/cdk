<project name="CDK" default="overview" basedir=".">

    <property name="javadoc.dir" value="javadoc" />
    <property name="pathtojava3d" value="" />

    <path id="project.class.path">
        <pathelement location="${java.ext.dirs}/rt.jar" />

        <pathelement location="." />
        <fileset dir="../../jar">
            <include name="*.jar" />
        </fileset>
        <fileset dir="${pathtojava3d}">
            <include name="*.jar" />
        </fileset>
        <fileset dir="../../jar/libio">
            <include name="*.jar" />
        </fileset>
    </path>

    <target name="overview">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="JavaDocStats" path="."/>

            <package name="org.openscience.cdk.*"/>
        </javadoc>
    </target>

    <target name="keyword.index">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="MakeKeywordIndexDoclet" path="."/>

            <packageset dir="../../src/">
              <include name="org/openscience/cdk/**"/>
              <exclude name="org/openscience/cdk/test/**"/>
            </packageset>
        </javadoc>
    </target>

    <target name="xmi">
        <javadoc private="false" public="true">
            <classpath refid="project.class.path" />

            <doclet name="XMIDoclet" path="."/>

            <packageset dir="../../src/">
              <include name="org/openscience/cdk/**"/>
              <exclude name="org/openscience/cdk/test/**"/>
            </packageset>
        </javadoc>
    </target>

    <target name="compileDoclets">
      <javac srcdir="source" destdir="."
             includes="*.java">
        <classpath>
          <fileset dir="${java.ext.dirs}">
            <include name="tools.jar" />
          </fileset>
        </classpath>
      </javac>
    </target>
    
<!-- things to compile
JavaDocStats.class: source/JavaDocStats.java
	${JAVAC} -classpath ${TOOLSJAR} -d . -O source/JavaDocStats.java

MakeKeywordIndexDoclet.class: source/MakeKeywordIndexDoclet.java
	${JAVAC} -classpath ${TOOLSJAR} -d . -O source/MakeKeywordIndexDoclet.java
    
XMIDoclet.class: source/XMIDoclet.java
	${JAVAC} -classpath ${TOOLSJAR} -d . -O source/XMIDoclet.java
-->
    
</project>



