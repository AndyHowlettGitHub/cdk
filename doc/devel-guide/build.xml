<project name="CDK_Article" default="pdf" basedir=".">

  <property name="build" value="build" />
  <property name="lib" value="lib" />
  <property name="src" value="src" />

  <path id="project.class.path">
    <pathelement location="/usr/lib/j2sdk1.3/jre/lib/rt.jar" />
    <pathelement location="." />

    <fileset dir="jar">
      <include name="*.jar" />
    </fileset>
  </path>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${build}" />
    <mkdir dir="${build}/graphics" />
  </target>

  <target name="clean">
    <delete>
      <fileset dir="." includes="**/*~" />
      <fileset dir="." includes="*.tar.gz" />
      <fileset dir="." includes="*.zip" />
    </delete>

    <delete dir="${build}/" />
  </target>

  <target name="pdf" depends="init">
    <java classname="org.apache.xalan.xslt.Process"
          args="-IN ../guide.xml -XSL ../lib/xslt/docbook/fo/docbook.xsl -OUT guide.fo"
          dir="${build}" fork="yes">
      <classpath refid="project.class.path" />
    </java>

    <java classname="org.apache.fop.apps.Fop"
          args="-fo guide.fo -pdf guide.pdf"
          dir="${build}" fork="yes">
      <classpath refid="project.class.path" />
    </java>
  </target>

</project>
	

