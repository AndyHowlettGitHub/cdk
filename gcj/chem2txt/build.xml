<project name="chem2txt" basedir=".">

<target name="copy">  
  <delete dir="src"/>
  <mkdir dir="src"/>
  <copy todir="src" failonerror="true">
    <fileset dir="../vecmath">
      <include name="javax/**/*.java"/>
    </fileset>
    <fileset dir="../../src">
      <includesfile name="chem2txt.javafiles"/>
      <includesfile name="../../src/interfaces.javafiles"/>
      <includesfile name="../../src/data.javafiles"/>
      <includesfile name="../../src/core.javafiles"/>
      <includesfile name="../../src/standard.javafiles"/>
      <includesfile name="../../src/io.javafiles"/>
    </fileset>
  </copy>
  <mkdir dir="jars"/>
  <copy todir="jars" failonerror="true">
    <fileset dir="../../jar">
      <includesfile name="../../src/META-INF/interfaces.libdepends"/>
      <includesfile name="../../src/META-INF/data.libdepends"/>
      <includesfile name="../../src/META-INF/core.libdepends"/>
      <includesfile name="../../src/META-INF/standard.libdepends"/>
      <includesfile name="../../src/META-INF/io.libdepends"/>
    </fileset>
  </copy>
</target>

</project>