<project name="CDK" default="dist" basedir=".">

    <!-- Ant build file for making binary distributions for 
         Windows -->

    <property name="dist" value="dist" />

    <target name="init">
        <tstamp />
        <mkdir dir="${dist}" />
    </target>

    <target name="clean">
        <delete>
            <fileset dir="." includes="*.zip" />
        </delete>
        <delete dir="${dist}" />
    </target>

    <target name="dist" depends="init">
        <copy todir="${dist}/jar">
            <fileset dir="../../../jar" includes="*.jar" />
            <fileset dir="../../../jar/libio" includes="*.jar" />
            <fileset dir="../../../dist/jar" includes="*.jar" />
        </copy>
        <copy todir="${dist}">
            <fileset dir="." includes="*.bat" />
            <fileset dir="../../.." includes="CHANGELOG" />
            <fileset dir="../../.." includes="BUGS" />
        </copy>
        <copy todir="${dist}/data">
            <fileset dir="../../../data" includes="**/*" />
        </copy>

        <zip zipfile="cdk-windows-${DSTAMP}.zip"
            basedir="${dist}" includes="**" />
    </target>

</project>
