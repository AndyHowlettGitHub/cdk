#! /bin/sh -e

PREFIX="@prefix@"

JARLIBDIR="${PREFIX}/lib/cdk"
JARLIBS=`ls -1 ${JARLIBDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CLASSPATH="@PATHTO3DJAR@:@PATHTORTJAR@:${JARLIBS}"

JAVA="@PATHTOJAVA@"

# Collect -D options as java arguments
command=${JAVA}
while [ `echo $1 | egrep '^-D' | wc -l` != 0 ]; do
        command="$command $1"
        shift
done


${command} -cp ${CLASSPATH} org.openscience.cdk.applications.Viewer $*
