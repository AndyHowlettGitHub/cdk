#! /bin/sh -e

PREFIX=/usr/local/cdk
RTJAR=
JAVA=/usr/lib/j2se/1.4/bin/java
CDKLIBDIR=/usr/local/cdk/lib/cdk
CDKJARDIR=/usr/local/cdk/share/java

JARLIBS=`ls -1 ${CDKLIBDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CDKLIBS=`ls -1 ${CDKJARDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CLASSPATH=${RTJAR}:${JARLIBS}:${CDKLIBS}

# Collect -D options as java arguments
command=${JAVA}
while [ `echo $1 | egrep '^-D' | wc -l` != 0 ]; do
        command="$command $1"
        shift
done

${JAVA} -cp ${CLASSPATH} org.openscience.cdk.applications.FileFormatGuesser $*
