#! /bin/sh -e

if (test $# == 1)
then
    :
else
    echo "syntax: cdk-download CAS-NUMBER"
    exit 1;
fi

PREFIX=@prefix@
RTJAR=@PATHTORTJAR@
JAVA=@PATHTOJAVA@
CDKLIBDIR=@CDKLIBDIR@
CDKJARDIR=@CDKJARDIR@

JARLIBS=`ls -1 ${CDKLIBDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CDKLIBS=`ls -1 ${CDKJARDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CLASSPATH=${RTJAR}:${JARLIBS}:${CDKLIBS}

# Collect -D options as java arguments
command=${JAVA}
while [ `echo $1 | egrep '^-D' | wc -l` != 0 ]; do
        command="$command $1"
        shift
done

${command} -cp ${CLASSPATH} org.openscience.cdk.test.internet.DADMLTest http://cdk.sf.net/super.xml CAS-NUMBER $*
