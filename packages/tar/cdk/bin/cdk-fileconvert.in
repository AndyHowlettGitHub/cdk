#! /bin/sh -e

PREFIX=@prefix@
RTJAR=@PATHTORTJAR@
JAVA=@PATHTOJAVA@
CDKLIBDIR=@CDKLIBDIR@
CDKJARDIR=@CDKJARDIR@

JARLIBS=`ls -1 ${CDKLIBDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CDKLIBS=`ls -1 ${CDKJARDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CLASSPATH=${RTJAR}:${JARLIBS}:${CDKLIBS}

# Collect -D options as java arguments
command=${JAVA}
while [ `echo $1 | egrep '^-D' | wc -l` != 0 ]; do
        command="$command $1"
        shift
done

${JAVA} -Dcdk.debugging=true -cp ${CLASSPATH} org.openscience.cdk.applications.FileConvertor $*
