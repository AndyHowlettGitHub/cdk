#! /bin/sh -e

PREFIX=@prefix@
RTJAR=@PATHTORTJAR@
JAVA=@PATHTOJAVA@
CDKLIBDIR=@CDKLIBDIR@
CDKJARDIR=@CDKJARDIR@

JARLIBS=`ls -1 ${CDKLIBDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CDKLIBS=`ls -1 ${CDKJARDIR}/*.jar | perl -ne "s/\n|\r/:/g; print;"`
CLASSPATH=${RTJAR}:${JARLIBS}:${CDKLIBS}

# Collect -D options as java arguments
command=${JAVA}
while [ `echo $1 | egrep '^-[D|X]' | wc -l` != 0  ]; do
        command="$command $1"
        shift
done

junit_gui="junit.awtui.TestRunner"
while getopts t o; do
    case $o in
        t)
            junit_gui="junit.textui.TestRunner"
            ;;
    esac
done

${command} -Dcdk.debugging=true -cp ${CLASSPATH} ${junit_gui} $*
