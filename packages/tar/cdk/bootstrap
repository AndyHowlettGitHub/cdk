#! /bin/sh -e
# bootstrap this software

cp ../../../CHANGELOG ChangeLog
cp ../../../build.xml .
cp ../../../javadoc.xml .
find ../../.. -name "*~" | xargs rm -f
rsync -vargopt ../../../data .
rsync -vargopt ../../../src .
cp ../../../jar/*.jar jar/.
cp ../../../doc/javadoc/source/MakeJavaFilesFilesDoclet.java doc/javadoc/source/.
find . -name "cdk-*.jar" | xargs rm -f
find data -name "CVS" | xargs rm -R
find src -name "CVS" | xargs rm -R
find src -name ".cvsignore" | xargs rm -f

aclocal && automake --gnu && autoconf
