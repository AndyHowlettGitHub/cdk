dnl
dnl $Id$
dnl
AC_INIT()
AM_INIT_AUTOMAKE(cdk-doc, `cat VERSION`)

dnl Required: javadoc
if test -x "$JAVA_HOME/bin/javadoc"
then
    AC_MSG_CHECKING(for javadoc)
    AC_MSG_RESULT($JAVA_HOME/bin/javadoc)
    PATHTOJAVADOC=$JAVA_HOME/bin/javadoc
else
    AC_CHECK_PROG(HASJAVADOC, javadoc, yes, no)
    if test "xyes" = "x$HASJAVADOC"
    then
        AC_PATH_PROG(PATHTOJAVADOC, javadoc, no)
    fi
fi
AC_SUBST(PATHTOJAVADOC)


dnl Required: tar
AC_CHECK_PROG(HASTAR, tar, yes, no)
if test "xyes" = "x$HASTAR"
then
    AC_PATH_PROG(PATHTOTAR, tar, no)
fi
AC_SUBST(PATHTOTAR)


dnl Required: ant
AC_CHECK_PROG(HASANT, ant, yes, no)
if test "xyes" = "x$HASANT"
then
    AC_PATH_PROG(PATHTOANT, ant, no)
fi
AC_SUBST(PATHTOANT)


dnl Required: gzip
AC_CHECK_PROG(HASGZIP, gzip, yes, no)
if test "xyes" = "x$HASGZIP"
then
    AC_PATH_PROG(PATHTOGZIP, gzip, no)
fi
AC_SUBST(PATHTOGZIP)


AC_OUTPUT([
   Makefile
   javadoc/Makefile
])

